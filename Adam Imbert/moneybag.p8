pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
psprite=0
plocx=50
plocy=50
faceleft=false
moving=false

money=0

function _update()
 if(psprite>29) then
  psprite=0
 end
 psprite=psprite+1
 
 xoff = 0
 yoff = 0
 moving=true
 if(btn(0)) then
  xoff -= 1
  faceleft=true
 end
 if(btn(1)) then
  xoff += 1
  faceleft=false
 end
 if(btn(2)) then
  yoff -= 1
 end
 if(btn(3)) then
  yoff += 1
 end
 
 if(xoff == 0 and yoff == 0) then
 	moving = false
 end
 
 plocx += xoff
 plocy += yoff
end

function _draw()
 cls(0)
 
 if(moving) then
  if(psprite<10) then
  	spr(1, plocx, plocy, 1, 1, faceleft)
 	elseif(psprite<20) then
  	spr(2, plocx, plocy, 1, 1, faceleft)
 	else
  	spr(3, plocx, plocy, 1, 1, faceleft)
 	end
 else
  spr(1, plocx, plocy, 1, 1, faceleft)
 end
 
 print("$", 0, 0, 11)
 print(money, 5, 0, 11)
 print("run", 48, 48, 8)
end
